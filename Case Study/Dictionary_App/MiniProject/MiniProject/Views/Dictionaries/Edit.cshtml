@model MiniProject.Models.Dictionary

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit🖊️</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="WordName" class="control-label"></label>
                <input asp-for="WordName" class="form-control" />
                <span asp-validation-for="WordName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WordDefinition" class="control-label"></label>
                <input asp-for="WordDefinition" class="form-control" />
                <span asp-validation-for="WordDefinition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
